{
  "version": 9,
  "configurePresets": [
    {
      "name": "defaults",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_VERBOSE_MAKEFILE": "ON",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
	      "CMAKE_CXX_COMPILER": "clang++",
	      "CMAKE_C_COMPILER": "clang"
      },
      "environment": {
        "VCPKG_BINARY_SOURCES": "clear;files,${sourceDir}/vcpkg/binary-sources,readwrite"
      }
    },
    {
      "name": "x64-windows",
      "inherits": "defaults",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "v143,host=x64",
        "strategy": "external"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Windows"
          ],
          "intelliSenseMode": "windows-clang-x64"
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-linux",
      "inherits": "defaults",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "arm64-osx",
      "inherits": "defaults",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "VCPKG_TARGET_TRIPLET": "arm64-osx"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "targets",
      "hidden": true,
      "targets": [
        "hktests",
        "hkc"
      ]
    },
    {
      "name": "x64-windows-dbg",
      "displayName": "Debug",
      "inherits": "targets",
      "configurePreset": "x64-windows",
      "configuration": "Debug"
    },
    {
      "name": "x64-windows-rel",
      "displayName": "Release",
      "inherits": "targets",
      "configurePreset": "x64-windows",
      "configuration": "Release"
    },
    {
      "name": "x64-linux-dbg",
      "displayName": "Debug",
      "inherits": "targets",
      "configurePreset": "x64-linux",
      "configuration": "Debug"
    },
    {
      "name": "x64-linux-rel",
      "displayName": "Release",
      "inherits": "targets",
      "configurePreset": "x64-linux",
      "configuration": "Release"
    },
    {
      "name": "arm64-osx-dbg",
      "displayName": "Debug",
      "inherits": "targets",
      "configurePreset": "arm64-osx",
      "configuration": "Debug"
    },
    {
      "name": "arm64-osx-rel",
      "displayName": "Release",
      "inherits": "targets",
      "configurePreset": "arm64-osx",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "shared-test-presets",
      "hidden": true,
      "output": {
        "outputJUnitFile": "${sourceDir}/out/test/${presetName}/test-results.xml"
      }
    },
    {
      "name": "x64-windows",
      "displayName": "test-dbg",
      "inherits": "shared-test-presets",
      "configurePreset": "x64-windows",
      "configuration": "Debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "arm64-osx",
      "displayName": "test-dbg",
      "inherits": "shared-test-presets",
      "configurePreset": "arm64-osx",
      "configuration": "Debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    }
  ]
}